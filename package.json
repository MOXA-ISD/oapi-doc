{
  "name": "oapi-doc",
  "version": "1.0.0",
  "description": "ThingsPro OAPI documentation",
  "repository": "git@github.com:MOXA-ISD/oapi-doc.git",
  "author": "Zack Yang <zack9433@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "npm run build:swagger && run-p lint:cg lint:cs",
    "lint:cg": "swagger-cli validate ./dist/cg/swagger.json",
    "lint:cs": "swagger-cli validate ./dist/cs/swagger.json",
    "prebuild": "rimraf dist && npm run build:swagger",
    "build": "spectacle dist/cg/swagger.json",
    "build:swagger": "mockserver -I ./schema/cg -O ./dist/cg && mockserver -I ./schema/cs -O ./dist/cs",
    "start": "spectacle -s dist/cg/swagger.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@thingspro/oapi-server": "^1.2.1",
    "commitizen": "^2.10.1",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "swagger-cli": "^2.1.0"
  },
  "dependencies": {
    "spectacle-docs": "^1.0.3"
  }
}
